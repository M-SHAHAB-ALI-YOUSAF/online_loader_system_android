<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#C6FF00" /> <!-- Set the background color when pressed -->
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#C6FF00" /> <!-- Set the background color when selected -->
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Set the default background color -->
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
</selector>
