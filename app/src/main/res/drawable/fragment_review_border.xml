<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/fragment_review_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:color="@color/btn__color" android:width="2dp" /> <!-- Black border -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- White background -->
        </shape>
    </item>
</layer-list>
