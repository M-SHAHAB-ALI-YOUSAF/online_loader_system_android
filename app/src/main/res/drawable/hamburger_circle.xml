<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White circle background -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp">

            </size>

            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <!-- Hamburger icon with padding -->
    <item
        android:right="@dimen/_3sdp"
        android:left="@dimen/_3sdp"
        android:top="@dimen/_3sdp"
        android:bottom="@dimen/_3sdp"
        android:drawable="@drawable/burger"
    android:width="35dp"
    android:height="35dp"
    android:gravity="center" />
</layer-list>
