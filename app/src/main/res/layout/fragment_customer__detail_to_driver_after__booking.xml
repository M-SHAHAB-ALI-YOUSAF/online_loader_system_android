<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_centerHorizontal="false"
        android:background="@drawable/top_round"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Ride Detail"
            android:textAlignment="center"
            android:textSize="@dimen/_20ssp" />

        <TextView
            android:id="@+id/text_view_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name: John Doe"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_pickup_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup: Location A"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_dropoff_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dropoff: Location B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_helpers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helpers: 2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_view_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: $50"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/callcustomer"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/call_icon" />

                <ImageView
                    android:id="@+id/cudtomer_message"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:src="@drawable/message_icon" />

            </LinearLayout>

            <Button
                android:id="@+id/button_cancel_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btn__color"
                android:layout_weight="1"
                android:text="Cancel Booking" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
